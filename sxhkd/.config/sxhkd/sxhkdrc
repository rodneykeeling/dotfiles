#
# wm independent hotkeys
#

# terminal emulator
super + Return
    alacritty

# program launcher
super + @d
    rofi -width 20 -show run -display-run ">"

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# i3lock
super + shift + x
    i3lock-fancy -p -- scrot -z -o

#
# bspwm hotkeys
#

# close and kill
super + {_,shift + }w
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# focus/swap
#

# move focus
super + {Left,Down,Right,Up}
    bspc node -f {west,south,east,north}

# focus the node in the given direction
super + shift + Left
    bspc node --swap west.local || bspc node --to-monitor west -f --rotate east 180
super + shift + Down
    bspc node --swap south
super + shift + Up
    bspc node --swap north
super + shift + Right
    bspc node --swap east.local || bspc node --to-monitor east -f

# focus the next/previous node in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local

# focus or send to the given desktop
super + 1
    bspc desktop -f 1

super + 2
    bspc desktop -f 2

super + 3
    bspc desktop -f 3

super + 4
    bspc desktop -f 4

super + 5
    bspc desktop -f 5

super + 6
    bspc desktop -f 6

super + shift + 1
    bspc node -d 1

super + shift + 2
    bspc node -d 2

super + shift + 3
    bspc node -d 3

super + shift + 4
    bspc node -d 4

super + shift + 5
    bspc node -d 5

super + shift + 6
    bspc node -d 6

#
# move/resize
#
super + alt + Left
    bspc node @west -r -40 || bspc node @east -r -40
super + alt + Down
    bspc node @north -r +40 || bspc node @south -r +40
super + alt + Up
    bspc node @north -r -40 || bspc node @south -r -40
super + alt + Right
    bspc node @west -r +40 || bspc node @east -r +40

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
   bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
   bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {h,j,k,l}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# increase window spacing
super + equal
    cur=$(bspc config -d focused window_gap) && new=$((cur + 5)) && bspc config -d focused window_gap $new

# decrease window spacing
super + minus
    cur=$(bspc config -d focused window_gap) && new=$((cur - 5)) && bspc config -d focused window_gap $new

# reset window spacing
super + 0
    bspc config -d focused window_gap 30

# rotate desktop
super + r
    bspc node @/ -R 90

# rotate current
super + shift + r
    bspc node @parent -R 90

# volume
XF86AudioRaiseVolume
    amixer -q set Master 3%+ on

XF86AudioLowerVolume
    amixer -q set Master 3%- on

XF86MonBrightnessUp
    xbacklight -inc 100

XF86MonBrightnessDown
    xbacklight -dec 100

# productivity mode
super + F12
    bspc config window_gap 0
    bspc config top_padding 29
    bspc config border_width 1
    bspc config focused_border_color \#666a80

# normal mode
super + F11
    bspc config window_gap 30
    bspc config top_padding 15
    bspc config border_width 2
    bspc config focused_border_color \#f4eeeb

# hipster mode
super + F10
    /home/rodney/.config/sxhkd/hipster.sh
