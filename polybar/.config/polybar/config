[colors]
background = #1C1E26
#background = #212121
#background = #0F1419
background-alt = #444
foreground = #ffffff
foreground-alt = #555
#primary = #BA95F5
#primary = #F2590C
primary = #26BBD9
secondary = #e60053
alert = #bd2c40

[bar/bar]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 30
radius = 0
fixed-center = true

offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 1

#module-margin-left = 1
#module-margin-right = 1

font-0 = Inconsolata:fontformat=truetype:style=bold:pixelsize=12:antialias=true;0
font-1 = Inconsolata:fontformat=truetype:style=bold:size=8:antialias=true;0
font-2 = "Font Awesome 5 Free:style=Solid:fontformat=truetype:size=10;0"

modules-left = bspwm
modules-center = date utc
modules-right = vpn wireless-network kube battery pulse

tray-position = right
tray-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/pulse]
type = custom/script
exec = $HOME/.config/polybar/pulseaudio-tail.sh
interval = 3
tail = true
label-underline = #F6F1FE
label-padding = 2

scroll-down = $HOME/.config/polybar/pulseaudio-tail.sh --down
scroll-up = $HOME/.config/polybar/pulseaudio-tail.sh --up
click-left = $HOME/.config/polybar/pulseaudio-tail.sh --profile

[module/kube]
type = custom/script
exec = $HOME/.config/polybar/kube.sh
interval = 5
label =  %output%
label-underline = #C3A2F8
label-padding = 2

[module/bspwm]
type = internal/bspwm
enable-click = true
pin-workspaces = true

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/date]
type = internal/date
interval = 5
date = "%A | %d %B %Y |"
time = %I:%M %p
format-prefix-foreground = ${colors.foreground}
label = %date% %time%

[module/utc]
type = custom/script
interval = 5
exec = TZ=UTC date "+%I:%M %p %Z"
label = " (%output%)"
label-foreground = ${colors.foreground-alt}

[module/vpn]
type = custom/script
exec = $HOME/.config/polybar/get-vpn.sh
interval = 9
click-left = $HOME/.config/polybar/connect-vpn.sh
label =  %output%
label-underline= #67469C
label-padding = 2

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-discharging> (unreleased)
format-discharging = <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-full = <label-full>

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging =  %percentage%%
label-charging-underline = #C3A2F8
label-charging-padding = 2

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging =  %percentage%%
label-discharging-underline = #E5D7FC
label-discharging-padding = 2

label-full =  %percentage%%
label-full-underline = #E5D7FC
label-full-padding = 2

[module/wireless-network]
type = internal/network
interface = wlp59s0

; Seconds to sleep between updates
; Default: 1
interval = 3.0

format-connected = <label-connected>
label-connected-underline = #A16DF5
label-connected =  %essid%
label-padding = 2
label-connected-padding = 2
;label-connected = %{A1:nm-applet:}%essid%%{A}

; Available tags:
;   <label-disconnected> (default)
;format-disconnected = ''


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

